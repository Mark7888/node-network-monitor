# Database Configuration
# Database type: postgres or sqlite
DB_TYPE=postgres

# PostgreSQL Configuration (when DB_TYPE=postgres)
DB_PASSWORD=your-secure-db-password
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=speedtest
# DB_NAME=speedtest
# DB_SSLMODE=require

# SQLite Configuration (when DB_TYPE=sqlite)
# DB_PATH=./data/speedtest.db

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# JWT Configuration
JWT_SECRET=your-secret-jwt-key-change-in-production
# JWT_EXPIRY=24h

# Server Configuration (optional overrides)
# SERVER_HOST=0.0.0.0
# SERVER_PORT=8080
# SERVER_MODE=release

# TLS/HTTPS Configuration (optional)
# TLS_ENABLED=false
# TLS_CERT=
# TLS_KEY=

# Database Advanced (optional)
# DB_MAX_CONNECTIONS=25
# DB_MAX_IDLE=5
# DB_CONNECTION_LIFETIME=5m

# Node Monitoring (optional)
# ALIVE_TIMEOUT=2m
# INACTIVE_TIMEOUT=1h
# STATUS_CHECK_INTERVAL=30s

# Data Retention (optional)
# RETENTION_MEASUREMENTS=365
# RETENTION_FAILED=90
# CLEANUP_INTERVAL=24h

# API Configuration (optional)
# RATE_LIMIT=100
# API_TIMEOUT=30s
# ALLOWED_UI_DOMAINS=https://example.com,https://app.example.com

# Logging (optional)
# LOG_LEVEL=info
# LOG_FORMAT=json
# LOG_OUTPUT=./logs/data-server.log
# LOG_OUTPUT_CONSOLE=false
